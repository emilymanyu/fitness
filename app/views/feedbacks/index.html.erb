
<body>


<h1>Listing Feedbacks</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Type&nbsp&nbsp&nbsp</th>
      <th>Comment&nbsp&nbsp&nbsp</th>
      <th>Star&nbsp&nbsp&nbsp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.type %></font></td>
        <td><%= feedback.comment %></td>
        <td><%= feedback.star%></td>
        <td><font color="#0099FF"><%= link_to 'Show', feedback %></font>&nbsp&nbsp&nbsp</td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %>&nbsp&nbsp&nbsp</td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>

<br>
<table align="center">
  <tr><td>
<%= link_to 'New Feedback', new_feedback_path, class: "btn btn-info" %>
</tr></td>
</table>
